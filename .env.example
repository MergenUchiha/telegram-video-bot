# =========================
# App / Runtime
# =========================
NODE_ENV=example
APP_NAME=telegram-meme-renderer
APP_PORT=3000
APP_BASE_URL=https://your-domain.com

# Telegram webhook (secret path is recommended)
TELEGRAM_BOT_TOKEN=123456:ABCDEF_your_token
TELEGRAM_BOT_MODE=polling
TELEGRAM_WEBHOOK_SECRET=super-secret-webhook-path
TELEGRAM_WEBHOOK_URL=https://your-domain.com/tg/webhook/super-secret-webhook-path

# Optional: if you use Local Bot API server (recommended for big files)
# Example: http://telegram-bot-api:8081
TELEGRAM_API_BASE_URL=http://telegram-bot-api:8081

# =========================
# Database (PostgreSQL)
# =========================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/renderer?schema=public

# =========================
# Redis / BullMQ
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=0

# BullMQ defaults
BULLMQ_PREFIX=tvb
RENDER_QUEUE_NAME=render

# locks
LOCK_TTL_MS=1800000

# One-video-at-a-time lock settings
USER_LOCK_TTL_MS=3600000

# =========================
# Storage (MinIO / S3)
# =========================
S3_ENDPOINT=http://localhost:9000
S3_REGION=eu-central-1
S3_BUCKET=renderer
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# Presigned links fallback
S3_PRESIGN_EXPIRES_SECONDS=1800

# =========================
# TTS (Kokoro FastAPI)
# =========================
KOKORO_BASE_URL=http://localhost:8000
KOKORO_TIMEOUT_MS=120000

# =========================
# FFmpeg / Rendering
# =========================
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
RENDER_TMP_DIR=/tmp/renderer
RENDER_TIMEOUT_MS=1200000

# Default rendering settings
OUTPUT_WIDTH=1080
OUTPUT_HEIGHT=1920
DEFAULT_DUCK_DB=-18
DEFAULT_PRESET=FAST

# =========================
# YouTube OAuth (optional)
# =========================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=https://your-domain.com/youtube/oauth/callback

# The scopes you need (example)
YOUTUBE_SCOPES=https://www.googleapis.com/auth/youtube.upload https://www.googleapis.com/auth/yt-analytics.readonly

# =========================
# Security / Encryption
# =========================
# 32 bytes base64 for AES-256-GCM (example placeholder)
ENCRYPTION_KEY_BASE64=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

#Minio
MINIO_ROOT_USER=user
MINIO_ROOT_PASSWORD=password
MINIO_DEFAULT_BUCKET=bucket_name

#Kokoro
KOKORO_BASE_URL=http://localhost:****

# heartbeat
RENDER_HEARTBEAT_MS=30000

# если хочешь общий (глобальный) лок “только 1 рендер на весь проект”
RENDER_GLOBAL_LOCK=1